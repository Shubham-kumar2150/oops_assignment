#include <iostream>
using namespace std;
class Account {
private:
    int balance;
public:
    Account() {
        balance = 0;
    }
    void deposit(int amt) {
        balance += amt;
    }
    int getBalance() {
        return balance;
    }
};
int main() {
    Account a;
    a.deposit(1000);
    cout << "Balance: " << a.getBalance();
    return 0;
}
